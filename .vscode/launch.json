    "version": "0.2.0",
    "configurations": [
        {
            "name": "Windows gdb 调试",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/pudron/pd.exe",
            "args": ["test/test.pd"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\mingw32\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make"
        }
    ]
}